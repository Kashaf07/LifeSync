<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E4E3F"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Current Account Display -->
    <TextView
        android:id="@+id/tvCurrentAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Account: None"
        android:textSize="16sp"
        android:textColor="#59A96A"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/current_account_background"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Create Account Button -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Create New Account"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_create_account"
        android:padding="14dp"
        android:layout_marginBottom="20dp" />

    <!-- Accounts List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Accounts"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4C6B55"
        android:layout_marginBottom="12dp" />

    <!-- No Accounts Message -->
    <TextView
        android:id="@+id/tvNoAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No accounts created yet.\nClick above to create your first account."
        android:textSize="14sp"
        android:textColor="#808080"
        android:gravity="center"
        android:padding="30dp"
        android:visibility="gone" />

    <!-- Accounts ListView -->
    <ListView
        android:id="@+id/lvAccounts"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:background="@drawable/listview_background" />

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to switch â€¢ Long press to delete"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="12dp" />

</LinearLayout>