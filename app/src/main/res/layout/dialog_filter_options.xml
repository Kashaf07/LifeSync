<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/filterCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvStatusAll"
                    style="@style/FilterChipStyle"
                    android:text="All"
                    android:background="@drawable/filter_chip_selected_bg"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tvStatusPending"
                    style="@style/FilterChipStyle"
                    android:text="Pending"/>

                <TextView
                    android:id="@+id/tvStatusComplete"
                    style="@style/FilterChipStyle"
                    android:text="Complete"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"
                android:layout_marginBottom="16dp"/>

            <!-- Time Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvTimeAll"
                    style="@style/FilterChipStyle"
                    android:text="All"
                    android:background="@drawable/filter_chip_selected_bg"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tvTimeMorning"
                    style="@style/FilterChipStyle"
                    android:text="Morning"/>

                <TextView
                    android:id="@+id/tvTimeAfternoon"
                    style="@style/FilterChipStyle"
                    android:text="Afternoon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvTimeEvening"
                    style="@style/FilterChipStyle"
                    android:text="Evening"/>

                <TextView
                    android:id="@+id/tvTimeAnytime"
                    style="@style/FilterChipStyle"
                    android:text="Night"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>