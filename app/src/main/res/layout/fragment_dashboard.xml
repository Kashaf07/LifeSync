<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient Background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/header_gradient"
            android:padding="20dp">

            <!-- User Name and Welcome Message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp">

                <!-- User Name (Large) -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- Welcome Back (Small) -->
                <TextView
                    android:id="@+id/tvWelcomeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back!"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="-40dp">

            <!-- Main Feature Cards - 2x2 Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="24dp">

                <!-- To Do Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardToDo"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#FFFFFF">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="âœ“"
                            android:textSize="24sp"
                            android:textColor="#6366F1"
                            android:gravity="center"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#E0E7FF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Do"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTodoCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 tasks"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Journal Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJournal"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#FFFFFF">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="ðŸ“–"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#FCE7F3"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Journal"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvJournalInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 entries"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Habits Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHabits"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="#FFFFFF">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="ðŸ”„"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#DCFCE7"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habits"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

