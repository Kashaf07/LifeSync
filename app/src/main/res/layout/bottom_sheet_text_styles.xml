<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Text Style"
            android:textColor="#DE000000"  android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/black" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Style"
                android:textColor="#8A000000"  android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingBottom="24dp">

                <ImageButton
                    android:id="@+id/boldButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/style_button_selector"
                    android:contentDescription="Bold"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_bold"
                    app:tint="#1F1D1D" />

                <ImageButton
                    android:id="@+id/italicButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/style_button_selector"
                    android:contentDescription="Italic"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_italic"
                    app:tint="#1F1D1D" />

                <ImageButton
                    android:id="@+id/underlineButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/style_button_selector"
                    android:contentDescription="Underline"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_underline"
                    app:tint="#1F1D1D" />

                <ImageButton
                    android:id="@+id/strikethroughButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/style_button_selector"
                    android:contentDescription="Strikethrough"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_strikethrough"
                    app:tint="#1F1D1D" />

                <ImageButton
                    android:id="@+id/highlightButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/style_button_selector"
                    android:contentDescription="Highlight"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/highlighter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Paragraph style"
                android:textColor="#8A000000"  android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:id="@+id/bulletDotButton"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/paragraph_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Dot number"
                        android:src="@drawable/bullet_list"
                        app:tint="#8A000000" /> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="Dot"
                    android:textColor="#8A000000"  android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bulletDigitButton"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/paragraph_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Digit number"
                        android:src="@drawable/ordered_list"
                        app:tint="#8A000000" /> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="Number"
                    android:textColor="#8A000000"  android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bulletLetterButton"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/paragraph_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="Letter number"
                        android:src="@drawable/bullet_list_alpha"
                        app:tint="#8A000000" /> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="Letter"
                    android:textColor="#8A000000"  android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Font Color"
                android:textColor="#8A000000"  android:textSize="16sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/fontColorPickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:paddingBottom="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Highlight Color"
                android:textColor="#8A000000"  android:textSize="16sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/highlightColorPickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:paddingBottom="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>