<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Priority Indicator Strip -->
        <View
            android:id="@+id/priorityIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="#E0E0E0"
            android:layout_gravity="center_vertical"/>

        <!-- Checkbox -->
        <ImageView
            android:id="@+id/checkBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/custom_checkbox"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />


        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <!-- Task Title -->
            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Task Description -->
            <TextView
                android:id="@+id/taskDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task description"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"/>

            <!-- Task Metadata (Date & Priority) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Deadline Badge -->
                <LinearLayout
                    android:id="@+id/deadlineContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_date_badge"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="10sp"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/taskDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/01/2025"
                        android:textSize="11sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- Priority Badge -->
                <TextView
                    android:id="@+id/priorityBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_priority_badge"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Edit/More Options Icon -->
        <ImageView
            android:id="@+id/ivMoreOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:contentDescription="Edit Task"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#999999" />
    </LinearLayout>
</androidx.cardview.widget.CardView>