<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F3">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF8F3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:tint="#2D3748"
            android:background="@drawable/circle_bg"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Create New Habit"
            android:textColor="#2D3748"
            android:textSize="24sp"
            android:letterSpacing="0.02" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#5B5F97"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingHorizontal="28dp"
                android:paddingVertical="10dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:letterSpacing="0.05" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Habit Name"
                android:textColor="#1A202C"
                android:textSize="17sp"
                android:letterSpacing="0.01" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:strokeColor="#B0B0B0"
                app:strokeWidth="1.8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:rippleColor="#B0B0B0">

                <EditText
                    android:id="@+id/etHabitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter habit name"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp"
                    android:textColor="#1E1E1E"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColorHint="#8A8A8A" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvSuggestionsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:text="Popular Habits to Start:"
                android:textColor="#5B5F97"
                android:textSize="15sp"
                android:visibility="gone" /> <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHabitSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:text="Choose Color"
                android:textColor="#1A202C"
                android:textSize="17sp"
                android:letterSpacing="0.01" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFF8F3"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <RadioGroup
                            android:id="@+id/rgColors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbBlue"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_blue"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbGreen"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_green"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbPeach"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_peach"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbLavender"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_lavender"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbSoftCoral"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_soft_coral"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbMintGreen"
                                android:layout_width="70dp"
                                android:layout_height="70dp"  android:layout_marginEnd="12dp"
                                android:background="@drawable/color_circle_mint_green"
                                android:button="@null" />

                            <RadioButton
                                android:id="@+id/rbSkyBlue"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/color_circle_sky_blue"
                                android:button="@null" />
                        </RadioGroup>
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:text="Start Date"
                android:textColor="#1A202C"
                android:textSize="17sp"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Optional"
                android:textColor="#718096"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFE5D9"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#FF9D73"
                        android:contentDescription="Calendar" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Select date"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#FF9D73"
                        android:contentDescription="Arrow" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                android:text="End Date"
                android:textColor="#1A202C"
                android:textSize="17sp"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Optional"
                android:textColor="#718096"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#C9E4DE"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="#7FB3A3"
                        android:contentDescription="Calendar" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Select date (No End)"
                        android:textColor="#2D3748"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#7FB3A3"
                        android:contentDescription="Arrow" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Reminders"
                    android:textColor="#1A202C"
                    android:textSize="17sp"
                    android:letterSpacing="0.01" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Maximum 5 reminders"
                android:textColor="#718096"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="start">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EDACAC"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="3dp">

                    <TextView
                        android:id="@+id/btnAddTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EDACAC"
                        android:textStyle="bold"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="10dp"
                        android:text="+"
                        android:textColor="#2D3748"
                        android:textSize="26sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="No reminders added yet"
                android:textColor="#A0AEC0"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>